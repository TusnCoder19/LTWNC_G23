@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var userName = Context.Session.GetString("UserName");
    var userRole = Context.Session.GetInt32("Role");
}

<div class="container-fluid min-vh-100 d-flex flex-column">
    <!-- Phần nội dung chính -->
    <div class="row flex-grow-1">
        <!-- Sidebar bên trái -->
        <aside class="col-md-3 bg-secondary text-white py-4">
            <h4 class="text-center">Quản lý</h4>
            @if (userRole == 1)
            {
                <div class="d-grid gap-2">


                    <a href="#" class="btn btn-success btn-block">
                        <i class="bi bi-plus-circle"></i> Thêm
                    </a>

                    <a href="#" class="btn btn-warning btn-block">
                        <i class="bi bi-pencil-square"></i> Sửa
                    </a>

                    <a href="#" class="btn btn-danger btn-block" onclick="return confirmDelete();">
                        <i class="bi bi-trash"></i> Xóa
                    </a>
                </div>
            }
        </aside>

        <!-- Nội dung bên phải -->
        <main class="col-md-9 py-4">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <p>Đây là nội dung chính của trang.</p>
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4">
        <div class="container text-center">
            <p>Đỗ Đức Vượng</p>
            <p>Bùi Anh Tuấn</p>
            <p>Lê Bá Toản</p>
            <p>Đoàn Minh Tuấn</p>
        </div>
    </footer>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Bạn có chắc chắn muốn xóa không?");
        }
    </script>
}
