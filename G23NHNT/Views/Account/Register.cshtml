@model G23NHNT.Models.RegisterViewModel
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 450px; padding: 20px;">
        <h2 class="text-center mb-4">Đăng ký</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form id="registerForm" method="post" asp-action="Register">
            <div class="form-group mb-3">
                <label for="userName">Tên đăng nhập</label>
                <input asp-for="UserName" class="form-control" id="userName" required />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="password">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" id="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="confirmPassword">Xác nhận mật khẩu</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label for="phoneNumber">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" id="phoneNumber" required />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label>Vai trò</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="role1" name="Role" value="1" required />
                    <label class="form-check-label" for="role1">Chủ trọ</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="role2" name="Role" value="2" required />
                    <label class="form-check-label" for="role2">Người tìm phòng</label>
                </div>
            </div>
            <div class="text-center mb-3">
                <button type="submit" class="btn btn-primary" style="width: 250px;">Đăng ký</button>
            </div>
        </form>

        <p class="text-center mt-3">
            <a>Bạn đã có tài khoản</a>
            <a asp-action="Login"> Đăng nhập</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleRadios = document.querySelectorAll('input[name="Role"]');
            roleRadios.forEach(radio => {
                radio.addEventListener('change', function () {
                    if (this.checked) {
                        roleRadios.forEach(otherRadio => {
                            if (otherRadio !== this) {
                                otherRadio.checked = false;
                            }
                        });
                    }
                });
            });
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    h2 {
        color: #343a40;
        font-size: 2.2rem; 
    }

    .card {
        border-radius: 15px; 
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); 
        transition: transform 0.2s, box-shadow 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    }

    .form-control {
        border-radius: 8px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
        font-size: 1.1rem;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .alert {
        margin-top: 20px;
        transition: opacity 0.5s ease;
    }

    .alert.show {
        opacity: 1;
    }

    .alert.hide {
        opacity: 0;
    }
    a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
    }

    a:hover {
        color: #0056b3;
        text-decoration: underline;
    }
</style>
