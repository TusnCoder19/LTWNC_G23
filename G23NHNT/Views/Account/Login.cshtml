@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="container mt-5">
    <div class="card shadow-lg mx-auto" style="max-width: 450px; padding: 20px;">
        <div class="card-body">
                        <h1 class="text-center mb-4" style="color: gray;">Ngân hàng nhà trọ MOTEL</h1>

            <h2 class="text-center mb-4">Đăng nhập</h2>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form method="post" asp-action="Login">
                <div class="form-group mb-3">
                    <label for="userName">Tên đăng nhập</label>
                    <input type="text" class="form-control" id="userName" name="userName" required placeholder="Nhập tên đăng nhập" />
                </div>
                <div class="form-group mb-3">
                    <label for="password">Mật khẩu</label>
                    <input type="password" class="form-control" id="password" name="password" required placeholder="Nhập mật khẩu" />
                </div>
                <div class="text-center mb-3">
                    <button type="submit" class="btn btn-primary" style="width: 250px;">Đăng nhập</button>
                </div>
            </form>
            
            <p class="text-center mt-3">
                <a>Chưa có tài khoản? <a asp-action="Register">Đăng ký ngay!</a></a>
            </p>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa; 
        font-family: 'Arial', sans-serif; 
        display: flex;
        align-items: center;
        justify-content: center;
        height: 80vh;
        margin: 0;
    }

    h2 {
        color: #343a40;
        font-size: 2.2rem; 
        transition: color 0.3s;
    }

    .card {
        border-radius: 15px; 
        overflow: hidden;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2); 
        transition: transform 0.2s, box-shadow 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.25);
    }

    .form-control {
        border-radius: 8px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .btn-primary {
        border-radius: 8px;
        transition: background-color 0.3s, transform 0.2s;
        font-size: 1.1rem; 

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .alert {
        margin-top: 20px;
        transition: opacity 0.5s ease;
    }

    .alert.show {
        opacity: 1;
    }

    .alert.hide {
        opacity: 0;
    }
    a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s;
    }

    a:hover {
        color: #0056b3;
        text-decoration: underline;
    }
</style>

<script>
    $(document).ready(function () {
        var errorMessage = $('.alert');
        if (errorMessage.length) {
            errorMessage.addClass('show');
            setTimeout(function () {
                errorMessage.removeClass('show').addClass('hide');
            }, 3000); // 3 giây
        }
    });
</script>
