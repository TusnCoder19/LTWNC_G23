@model G23NHNT.ViewModels.RoomPostViewModel

<h2>Đăng thông tin phòng mới</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Room.NameRoom">Tên phòng</label>
        <input asp-for="Room.NameRoom" class="form-control" />
        <span asp-validation-for="Room.NameRoom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Room.TypeRoom">Loại phòng</label>
        <input asp-for="Room.TypeRoom" class="form-control" />
        <span asp-validation-for="Room.TypeRoom" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.Address">Địa chỉ</label>
        <input asp-for="RoomDetail.Address" class="form-control" />
        <span asp-validation-for="RoomDetail.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.Price">Giá thuê</label>
        <input asp-for="RoomDetail.Price" class="form-control" />
        <span asp-validation-for="RoomDetail.Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.DienTich">Diện tích (m²)</label>
        <input asp-for="RoomDetail.DienTich" class="form-control" />
        <span asp-validation-for="RoomDetail.DienTich" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.TienDien">Tiền điện</label>
        <input asp-for="RoomDetail.TienDien" class="form-control" />
        <span asp-validation-for="RoomDetail.TienDien" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.TienNuoc">Tiền nước</label>
        <input asp-for="RoomDetail.TienNuoc" class="form-control" />
        <span asp-validation-for="RoomDetail.TienNuoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.TienDv">Tiền dịch vụ</label>
        <input asp-for="RoomDetail.TienDv" class="form-control" />
        <span asp-validation-for="RoomDetail.TienDv" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.Describe">Mô tả</label>
        <textarea asp-for="RoomDetail.Describe" class="form-control"></textarea>
        <span asp-validation-for="RoomDetail.Describe" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.Status">Trạng thái</label>
        <input asp-for="RoomDetail.Status" class="form-control" />
        <span asp-validation-for="RoomDetail.Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomDetail.Image">Hình ảnh</label>
        <input asp-for="RoomDetail.Image" type="file" class="form-control"  name="imageFile"/>

        @if (!string.IsNullOrEmpty(Model.RoomDetail.Image))
        {
            <div class="mt-2">
                <img src="~/@Model.RoomDetail.Image" alt="Ảnh của phòng" style="max-width: 200px;" />
            </div>
        }

        <span asp-validation-for="RoomDetail.Image" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tiện ích</label>
        @foreach (var amenity in Model.Amenities)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedAmenities" value="@amenity.IdAmenity" class="form-check-input"
                       @(Model.SelectedAmenities.Contains(amenity.IdAmenity) ? "checked" : "") />
                <label class="form-check-label">@amenity.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Đăng phòng</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
